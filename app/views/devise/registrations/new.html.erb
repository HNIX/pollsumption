<!-- BEGIN REGISTRATION FORM -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "register-form"}) do |f| %>
    <%= devise_error_messages! %>
    <h3 class="font-green">Sign Up</h3>
    <p class="hint"> Enter your account details below: </p>
    <div class="form-group">
        <%= f.label :username, class: "control-label visible-ie8 visible-ie9" %>
        <%= f.text_field :username, class: "form-control placeholder-no-fix", html: {spellcheck: "false"}, placeholder: "Username"  %>
    </div>
    <div class="form-group">
        <%= f.label :email, class: "control-label visible-ie8 visible-ie9" %>
        <%= f.email_field :email, class: "form-control placeholder-no-fix", html: {spellcheck: "false"}, placeholder: "Email"  %>
    </div>
    <div class="form-group">
        <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
        <%= f.password_field :password, class: "form-control placeholder-no-fix", html: {autocomplete: "off"}, placeholder: "Password" %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation", class: "control-label visible-ie8 visible-ie9" %>
        <%= f.password_field :password_confirmation, class: "form-control placeholder-no-fix", html: {autocomplete: "off"}, placeholder: "Confirm Password" %>
    </div>
    <div class="form-actions">
        <%= f.submit "Sign Up", class: "btn green uppercase" %>
    </div>
    <div class="create-account">
      <p>
        <%= render "devise/shared/links" %>
      </p>
    </div>
<% end %>
<!-- END REGISTRATION FORM -->
