<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forget-form" }) do |f| %>
  <%= f.error_notification %>
    <h3 class="font-green">Forget Password ?</h3>
    <p> Enter your e-mail address below to reset your password. </p>
    <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, class: "form-control placeholder-no-fix", placeholder: "Email" %>
    </div>
    <div class="form-actions">
        <%= link_to "Cancel", :back, class: 'btn green btn-outline' %>
        <%= f.submit "Submit", class: "btn btn-success uppercase pull-right" %>
    </div>
     <div class="create-account">
      <p>
        <%= render "devise/shared/links" %>
      </p>
    </div>
<% end %>
<!-- END FORGOT PASSWORD FORM -->