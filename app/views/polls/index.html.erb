<% content_for(:page_header) {"Participate in our poll right now!"} %>

<% @polls.each do |poll| %>
<div class="col-md-6">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-green-sharp">
                <span class="caption-subject bold uppercase"><%= poll.topic %></span>
                <span class="caption-helper">Total Votes: <%= poll.votes_summary %></span>
            </div>
            <div class="actions">
              <% if current_user %>
              <%= link_to 'Vote', poll_path(poll), class: "btn btn-circle btn-default btn-sm" %>
              <%= link_to 'Edit', edit_poll_path(poll), class: "btn btn-circle btn-default btn-sm" %>
              <%= link_to 'Delete', poll_path(poll), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-circle btn-default btn-sm" %>
              <% end %>
            </div>
        </div>
        <div class="portlet-body">
            <div>
               <%= render partial: 'polls/show_vote_option', collection: poll.vote_options, as: :option %>
            </div>
        </div>
        <div class="actions">
         <% if !current_user %>
            <p>Please <%= link_to "Sign In", new_user_session_path %> to participate in this poll.</p>
         <% end %>
        </div>
    </div>
</div>
<% end %>